.file
  position relative
  display flex
  align-items center
  width 100%
  height 49px
  text-align right
  color #fff
  overflow hidden
  cursor pointer
  
  input
    position absolute
    left -999px
  
  &:before
  &:after
    position absolute
    top 0
    right 0
    display block
    width 49px
    height 49px
    content ''
    
  &:before
    transition all .25s ease-in-out
    border: 1px solid #d8dbdf
    background-color #fff
    border-radius 100%
    
  &:after
    background url('img/icon_file.png') no-repeat center center
    
  span
    display block
    width 100%
    padding-right 69px
    color #fff
    font-size 14px
    line-height 18px
    
  &:hover:before
    background-color #f1f4f6